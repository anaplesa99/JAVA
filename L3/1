package lab3;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

class exi {	
	public static void nr_vocale() throws IOException {
		// TODO Auto-generated method stub
		BufferedReader br = new BufferedReader(new FileReader("cantece_in.txt"));
		 String line;
		 int count=0,j=0;
		 
		 while ((line = br.readLine()) != null) {
		   //System.out.println(line);
			 count=0;
			 j++;
			 for(int i = 0; i < line.length(); i++) {    
		            if(line.charAt(i)== 'a' || line.charAt(i)== 'e'||line.charAt(i)== 'i'||line.charAt(i)== 'o'||line.charAt(i)== 'u')  count++;  
			 }
			 BufferedWriter writer = new BufferedWriter(new FileWriter("cantece_out.txt"));
			 writer.write(line);
			 writer.write(Integer.toString(count));
			 
			
			     
			    writer.close();
		 }
	}
	public static void nr_cuvinte() throws IOException {
		// TODO Auto-generated method stub
		BufferedReader br = new BufferedReader(new FileReader("cantece_in.txt"));
		 String line;
		 int count=1,j=0;
		 
		 while ((line = br.readLine()) != null) {
		   //System.out.println(line);
			 count=1;
			 j++;
			 for(int i = 0; i < line.length(); i++) {    
		            if(line.charAt(i)== ' ' )  count++;  
			 }
			 System.out.println("Numarul de cuvinte de pe randul" +j+"este" +count);
		 }
	}
	public static void main(String[ ] args) throws IOException {
		nr_vocale();
	}

}
